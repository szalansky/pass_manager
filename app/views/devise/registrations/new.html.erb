<div id="devise_password_container">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="form_input"><%= f.label :email %><br />
  <%= f.email_field :email %></div><br/>

  <div class="form_input"><%= f.label :password %>
  <%= f.password_field :password %></div><br/>

  <div class="form_input"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div><br/>

  <div class="form_input"><%= f.submit "Sign up" %></div>
<% end %><br/>

  <%= devise_error_messages! %>
</div>
