<div id="devise_container">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form_input"><%= f.label :email %><br />
  <%= f.email_field :email %></div><br />

  <div class="form_input"><%= f.label :password %><br />
  <%= f.password_field :password %></div><br />

  <% if devise_mapping.rememberable? -%>
    <div class="form_input"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class="form_input"><%= f.submit "Sign in" %></div>
<% end %>
</div>
