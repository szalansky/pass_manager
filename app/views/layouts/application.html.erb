<!DOCTYPE html>
<html>
<head>
  <title>PassManager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="bar">
<% if user_signed_in? %>
<%= link_to "Change password", edit_password_path %> || <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to "Register", new_user_registration_path %> || <%= link_to "Login", new_user_session_path %>
<% end %>
</div>
<%= yield %>

</body>
</html>
